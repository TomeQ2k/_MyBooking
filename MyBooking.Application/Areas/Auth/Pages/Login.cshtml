@page
@model LoginModel
@{
    ViewData["Title"] = Model.Title;
}

<section id="login">
    <div class="container">
        <div class="col-md-8 mx-auto">
            <h1>Sign in to your account and use extra bonus features provided for authorized users!</h1>
            <hr>
            <form method="post">
                <fieldset class="form-group">
                    <label asp-for="@Model.UserLogin.Email"></label>
                    <input asp-for="@Model.UserLogin.Email" type="email" class="form-control"
                        placeholder="Email address...">
                    <span asp-validation-for="@Model.UserLogin.Email" class="text-danger"></span>
                </fieldset>
                <fieldset class="form-group">
                    <label asp-for=@Model.UserLogin.Password></label>
                    <input asp-for=@Model.UserLogin.Password type="password" class="form-control"
                        placeholder="Your password...">
                    <span asp-validation-for=@Model.UserLogin.Password class="text-danger"></span>
                </fieldset>
                <button type="submit" class="btn btn-outline-primary btn-block">Sign in</button>
            </form>
            <div class="d-flex flex-row justify-content-between align-items-center">
                <span class="text-muted">You don't have an account yet?</span>
                <a asp-area="Auth" asp-page="/Register" class="btn btn-link">Create your account and join us</a>
            </div>
            <div class="d-flex flex-row justify-content-between align-items-center">
                <span class="text-muted">You don't remeber your password?</span>
                <a asp-area="Auth" asp-page="/ForgotPassword" class="btn btn-link">Reset your password</a>
            </div>
        </div>
    </div>
</section>

<partial name="_AlertPartial" model="@Alertify.Alert" />