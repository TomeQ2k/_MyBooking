@page 
@model RegisterModel
@{
    ViewData["Title"] = Model.Title;
}

<section id="register">
    <div class="container">
        <div class="col-md-8 mx-auto">
            <h1>Create your account and get extra bonus features!</h1>
            <div class="text-danger" asp-validation-summary="All"></div>
            <hr>
            <form method="POST">
                <fieldset class="form-group">
                    <label asp-for="@Model.UserRegister.Email"></label>
                    <input asp-for="@Model.UserRegister.Email" type="email" class="form-control"
                        placeholder="Email address...">
                    <span asp-validation-for="@Model.UserRegister.Email" class="text-danger"></span>
                </fieldset>
                <fieldset class="form-group">
                    <label>Your username</label>
                    <input asp-for=@Model.UserRegister.Username type="text" class="form-control"
                        placeholder="Your username...">
                    <span asp-validation-for=@Model.UserRegister.Username class="text-danger"></span>
                </fieldset>
                <fieldset class="form-group">
                    <label asp-for=@Model.UserRegister.Password></label>
                    <input asp-for=@Model.UserRegister.Password type="password" class="form-control"
                        placeholder="Your password...">
                    <span asp-validation-for=@Model.UserRegister.Password class="text-danger"></span>
                </fieldset>
                <fieldset class="form-group">
                    <label>Confirm password</label>
                    <input asp-for=@Model.UserRegister.ConfirmPassword type="password" class="form-control"
                        placeholder="Confirm your password...">
                    <span asp-validation-for=@Model.UserRegister.ConfirmPassword class="text-danger"></span>
                </fieldset>
                <button type="submit" class="btn btn-outline-primary btn-block">Sign up</button>
            </form>
            <div class="d-flex flex-row justify-content-between align-items-center">
                <span class="text-muted">Do you have account?</span>
                <a asp-area="Auth" asp-page="/Login" class="btn btn-link">Just sign in to your account</a>
            </div>
        </div>
    </div>

</section>

<partial name="_AlertPartial" model="@Alertify.Alert" />

@section scripts{
   <partial name="_ValidationScriptsPartial" />
}