@page "/Offers/Create"
@model CreateOfferModel
@{
    ViewData["Title"] = Model.Title;
}

<section id="createOffer">
    <div class="container">
        <form method="POST" enctype="multipart/form-data">
            <h1>Create offer</h1>
            <hr>
            <div class="row">
                <div class="col-md-6 d-flex flex-column justify-content-between">
                    <fieldset class="form-group">
                        <label>Short description</label>
                        <input asp-for="@Model.CreateOfferInput.Title" type="text" class="form-control"
                            maxlength="@Constants.MaxTitleLength" placeholder="Short description...">
                        <span asp-validation-for="@Model.CreateOfferInput.Title" class="text-danger"></span>
                    </fieldset>
                    <fieldset class="form-group">
                        <label>Description</label>
                        <textarea asp-for="@Model.CreateOfferInput.OfferDetails.Description" type="text"
                            class="form-control" placeholder="Description..." rows="20"
                            maxlength="@Constants.MaxDescriptionLength"></textarea>
                        <span asp-validation-for="@Model.CreateOfferInput.OfferDetails.Description"
                            class="text-danger"></span>
                    </fieldset>
                    <fieldset class="form-group">
                        <label>Location</label>
                        <input asp-for="@Model.CreateOfferInput.Location" type="text" class="form-control"
                            maxlength="@Constants.MaxLocationLength" placeholder="Location...">
                        <span asp-validation-for="@Model.CreateOfferInput.Location" class="text-danger"></span>
                    </fieldset>
                    <fieldset class="form-group">
                        <label>Total offers count</label>
                        <input asp-for="@Model.CreateOfferInput.TotalCount" type="number" class="form-control" value="1"
                            min="1" max="@Constants.MaxOffersCount" placeholder="Total offers count...">
                        <span asp-validation-for="@Model.CreateOfferInput.TotalCount" class="text-danger"></span>
                    </fieldset>
                </div>
                <div class="col-md-6">
                    <fieldset class="form-group">
                        <label>Price per night [$]</label>
                        <input asp-for="@Model.CreateOfferInput.Price" type="number" min="0" max="@Constants.MaxPrice"
                            step="0.01" class="form-control" placeholder="Price...">
                        <span asp-validation-for="@Model.CreateOfferInput.Price" class="text-danger"></span>
                    </fieldset>
                    <fieldset class="form-group">
                        <label>Rooms count</label>
                        <input asp-for="@Model.CreateOfferInput.OfferDetails.RoomsCount" type="number"
                            class="form-control" value="1" min="1" max="@Constants.MaxRoomsCount"
                            placeholder="Rooms count...">
                        <span asp-validation-for="@Model.CreateOfferInput.OfferDetails.RoomsCount"
                            class="text-danger"></span>
                    </fieldset>
                    <fieldset class="form-group">
                        <label>Persons count</label>
                        <input asp-for="@Model.CreateOfferInput.OfferDetails.PersonsCount" type="number"
                            class="form-control" value="1" min="1" max="@Constants.MaxPersonsCount"
                            placeholder="Persons count...">
                        <span asp-validation-for="@Model.CreateOfferInput.OfferDetails.PersonsCount"
                            class="text-danger"></span>
                    </fieldset>
                    <div class="d-flex flex-row justify-content-between">
                        <fieldset class="form-group">
                            <input asp-for="@Model.CreateOfferInput.OfferDetails.HasBathroom" class="m-2"
                                type="checkbox">
                            <label>Has bathroom?</label>
                        </fieldset>
                        <fieldset class="form-group">
                            <label>Has kitchen?</label>
                            <input asp-for="@Model.CreateOfferInput.OfferDetails.HasKitchen" class="m-2"
                                type="checkbox">
                        </fieldset>
                    </div>
                    <div class="d-flex flex-row justify-content-between">
                        <fieldset class="form-group">
                            <input asp-for="@Model.CreateOfferInput.OfferDetails.HasWifi" class="m-2" type="checkbox">
                            <label>Has WIFI?</label>
                        </fieldset>
                        <fieldset class="form-group">
                            <label>Has TV?</label>
                            <input asp-for="@Model.CreateOfferInput.OfferDetails.HasTV" class="m-2" type="checkbox">
                        </fieldset>
                    </div>
                    <div class="d-flex flex-row justify-content-between">
                        <fieldset class="form-group">
                            <input asp-for="@Model.CreateOfferInput.OfferDetails.HasBalcony" class="m-2"
                                type="checkbox">
                            <label>Has balcony?</label>
                        </fieldset>
                        <fieldset class="form-group">
                            <label>Has minibar?</label>
                            <input asp-for="@Model.CreateOfferInput.OfferDetails.HasMinibar" class="m-2"
                                type="checkbox">
                        </fieldset>
                    </div>
                    <div class="col">
                        <fieldset class="form-group">
                            <label>Accommodation type</label>
                            <select class="form-control"
                                asp-for="@Model.CreateOfferInput.OfferDetails.AccommodationType">
                                <option value="0">Without food</option>
                                <option value="1">Only breakfast</option>
                                <option value="2">Breakfast & dinner</option>
                                <option value="3">All inclusive</option>
                            </select>
                        </fieldset>
                        <fieldset class="form-group">
                            <label>Photos [maximum count: @Constants.MaxPhotosCount]</label>
                            <input asp-for="@Model.CreateOfferInput.OfferPhotos" type="file" class="form-control p-2"
                                multiple>
                            <span asp-validation-for="@Model.CreateOfferInput.OfferPhotos" class="text-danger"></span>
                        </fieldset>
                        <fieldset class="form-group">
                            <label>Phone number</label>
                            <input asp-for="@Model.CreateOfferInput.OfferDetails.PhoneNumber" type="tel"
                                class="form-control" placeholder="Phone number...">
                            <span asp-validation-for="@Model.CreateOfferInput.OfferDetails.PhoneNumber"
                                class="text-danger"></span>
                        </fieldset>
                        <fieldset class="form-group">
                            <label>Email address</label>
                            <input asp-for="@Model.CreateOfferInput.OfferDetails.EmailAddress" type="email"
                                class="form-control" placeholder="Email address...">
                            <span asp-validation-for="@Model.CreateOfferInput.OfferDetails.EmailAddress"
                                class="text-danger"></span>
                        </fieldset>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-outline-primary btn-block">Create offer</button>
        </form>
    </div>
</section>