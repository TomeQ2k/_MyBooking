@page "/Orders"
@model OrdersModel
@{
    ViewData["Title"] = Model.Title;
}

<section id="orders">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                @await Component.InvokeAsync("OrdersFilterForm", new {filterParams = new BookingOrdersFilterParams()})
                <a asp-area="Orders" asp-page="/Orders" class="btn btn-outline-danger btn-block mt-2">Clear</a>
            </div>
            <div class="col-md-8">
                <h1>Orders</h1>
                <hr>
                @foreach (var order in Model.Orders)
                {
                    <partial name="_OrderCard" model="@order" />
                }
            </div>
        </div>
    </div>
</section>